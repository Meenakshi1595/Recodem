<span id ="fsb" is="free-shipping-bar">
  <span id="fsb-render"></span>
  <input class="visually-hidden" id="customer-details" value={{ customer.id }}></input>
</span>

<style>
@import url('https://fonts.googleapis.com/css2?family=Bangers&family=Carter+One&family=Chewy&family=Courier+Prime&family=Crafty+Girls&family=Dancing+Script&family=Great+Vibes&family=Josefin+Sans&family=Julius+Sans+One&family=Lato:wght@300&family=Lobster&family=Montserrat&family=Mulish&family=Mystery+Quest&family=Open+Sans&family=Oswald&family=Playfair+Display&family=Poiret+One&family=Quicksand&family=Raleway&family=Righteous&family=Roboto&family=Unica+One&family=Varela+Round&display=swap');
  .visually-hidden {
    position: absolute!important;
    overflow: hidden;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    border: 0;
    clip: rect(0 0 0 0);
    word-wrap: normal!important;
  }
  
  
  span[is="free-shipping-bar"] {
    position :sticky;    
    top: 0px;
    text-align: center;
    width: 100vw;
    height: 40px;
    color:cyan;
    background-color: white;    
    display:none;  
    padding: 0;
    font: inherit;
    cursor: pointer;
    outline: inherit;
    z-index: 100;
    transition: transform 0.3s cubic-bezier(0.075, 0.82, 0.165, 1);
  }

  span[is="free-shipping-bar"]:hover {
    transform: scale(1.10);
  }

  span[is="free-shipping-bar"]:active {
    transform: scale(0.95);
  }

  canvas:empty {
    display: initial;
  }
</style>
{% schema %}
{
  "name": "FSB",
  "target": "head",
  "stylesheet": "bar.css",
  "javascript": "bar.js",
  "settings": []
}
{% endschema %}